{
    "testEnvironment": "node",
    "testMatch": [
        "**/tests/**/*.test.js",
        "**/tests/**/*.spec.js"
    ],
    "collectCoverageFrom": [
        "src/**/*.js",
        "!src/index.js"
    ],
    "coverageDirectory": "tests/coverage",
    "coverageReporters": [
        "text",
        "lcov",
        "html"
    ],
    "setupFilesAfterEnv": [
        "<rootDir>/tests/setup.js"
    ],
    "testTimeout": 30000
}